<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4A4545"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".second_layer.MainActivity4">

    //TODO Button Back, Save, Load.
    <EditText
        android:id="@+id/edtEmTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="This is the title for the first note"
        android:paddingTop="73dp"
        android:textColor="#00BCD4"
        android:textColorHint="#00BCD4"
        android:textSize="20dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="enterNoteFrontPage"
        android:text="Back"
        android:translationY="500dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="save"
        android:text="Save"
        android:translationX="270dp"
        android:translationY="450dp" />

</LinearLayout>