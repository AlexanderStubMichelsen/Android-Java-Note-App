<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4A4545"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".first_layer.MainActivity">


    <TextView
        android:id="@+id/textViewEmTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="This is an App for organized notes"
        android:paddingTop="73dp"
        android:textColor="@color/purple_500"
        android:textColorHint="#00BCD4"
        android:textSize="20dp" />

    //Longpress
    <EditText
        android:id="@+id/textViewDmTwo"
        android:maxLength="20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="65dp"
        android:textColor="#00BCD4"
        android:textColorHint="#00BCD4"
        android:textSize="20dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:onClick="onBtnClick"
        android:text="SAVE" />

    <EditText
        android:id="@+id/textViewVmTwo"
        android:maxLength="20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="65dp"
        android:textColor="#00BCD4"
        android:textColorHint="#00BCD4"
        android:textSize="20dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="374dp"
        android:layout_height="59dp"
        android:onClick="onBtnClick2"
        android:text="SAVE" />

    <EditText
        android:id="@+id/textViewWmTwo"
        android:maxLength="20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="65dp"
        android:textColor="#00BCD4"
        android:textColorHint="#00BCD4"
        android:textSize="20dp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:onClick="onBtnClick3"
        android:text="SAVE" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />

</LinearLayout>