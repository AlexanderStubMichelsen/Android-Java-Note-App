<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4A4545"
    tools:context="dk.komputerkomputer.helloworld.first_layer.MainActivity">

    <!-- Toolbar at the top -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#d4d0e8"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/toolbar_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:src="@drawable/onotes_icon"
                android:contentDescription="ONotes icon" />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <!-- Scrollable content below -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/textView1mTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="20"
            android:paddingTop="60dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#00BCD4"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/textView2mTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="60dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#00BCD4"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/textView3mTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="20"
            android:paddingTop="60dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#00BCD4"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/textView4mTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="20"
            android:paddingTop="60dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#00BCD4"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/textView5mTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="20"
            android:paddingTop="60dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#00BCD4"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/textView6mTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="20"
            android:paddingTop="60dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#00BCD4"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/textView7mTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="20"
            android:paddingTop="60dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#00BCD4"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/privacyPolicyLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Privacy Policy"
            android:textColor="@android:color/holo_blue_light"
            android:layout_gravity="center_horizontal"
            android:padding="24dp"
            android:textSize="14sp"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>
</ScrollView>
</LinearLayout>
