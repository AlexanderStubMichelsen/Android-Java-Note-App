<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4A4545"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".first_layer.MainActivity">


    <TextView
        android:id="@+id/textViewEmTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="This is an App for organized notes"
        android:paddingTop="73dp"
        android:textColor="@color/purple_500"
        android:textColorHint="#00BCD4"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/edtEmTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="This is the title for the first note"
        android:paddingTop="73dp"
        android:textColor="#00BCD4"
        android:textColorHint="#00BCD4"
        android:textSize="20dp" />
    <!--//Longpress-->
    <TextView
        android:id="@+id/textViewDmTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="NoteSpace: "
        android:onClick="enterNoteCollectionSpace"
        android:paddingTop="73dp"
        android:textColor="#00BCD4"
        android:textColorHint="#00BCD4"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textViewVmTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="NoteSpace: "
        android:onClick="enterNoteCollectionSpaceTwo"
        android:paddingTop="73dp"
        android:textColor="#00BCD4"
        android:textColorHint="#00BCD4"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textViewWmTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="NoteSpace: "
        android:onClick="enterNoteCollectionSpaceThree"
        android:paddingTop="73dp"
        android:textColor="#00BCD4"
        android:textColorHint="#00BCD4"
        android:textSize="20dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="#8E5858"
        android:backgroundTint="#8C3838"
        android:hint="ADD NOTE SPACE"
        android:onClick="onBtnClick"
        android:textColorHint="#00BCD4"
        app:strokeColor="#7E2A2A" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="#8E5858"
        android:backgroundTint="#8C3838"
        android:hint="DEL LAST NOTE SPACE"
        android:onClick="deleteLastNote"
        android:textColorHint="#00BCD4"
        app:strokeColor="#7E2A2A" />/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />

</LinearLayout>